.page {
  overflow: hidden;
  position: relative;
  font-family: 'Custom EN', serif;
  
}
.container {
  position: relative;
  scroll-behavior: smooth;
}

.nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  background: rgba(0, 0, 0, 0.25);
  z-index: 5;
}

.sect {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: relative;
}

.one {
  background: white;
  color: black;
}

.one .one-title {
  font-weight: bold;
  font-size: 48rpx;
}

.one .one-subtitle {
  text-align: center;
  font-size: 32rpx;
}

.two {
  background-size: cover;
  color: white;
}

.three {
  background-size: cover;
  color: white;
}

svg {
    width: 0;
    height: 0;
    position: absolute;
}

.video-container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.video-container video {
  left: 50%;
  min-height: 100%;
  width: 400vw;
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
}

.content {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  top: 15vh;
  left: 50%;
  transform: translateX(-50%);
  margin: 0 auto;
  width: 80vw;
  height: 70vh;
  background: rgba(253, 245, 232, 0.85);
  border-radius: 8rpx;
  color: rgba(0, 0, 0, 0.8);
  z-index: 10;
  opacity: 1;
  border: 1rpx solid rgba(0, 0, 0, 0.8);
  background: white;
  box-shadow: 5px 0px 30px 1px rgba(218, 218, 218, 0.6);
}

.content .top-text {
  font-size: 32rpx;
  font-style: italic;
  margin: 10rpx;
  font-weight: bold;
}

.content .name-subtitle {
  font-size: 32rpx;
  font-style: italic;
  margin: 10rpx;
  font-weight: bold;
}

.content .main-names {
  font-size: 102rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  text-transform: uppercase;
  font-weight: bold;
}

.main-names .and {
  font-size: 52rpx;
}

.content .datetime-location-block {
  text-transform: uppercase;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  /* font-weight: lighter; */
  margin-top: 56rpx;
}

.content .datetime-location-block view {
  margin-top: 8rpx;
}

.video-container .content.loading {
  opacity: 0;
}

.video-container .content.loaded {
  opacity: 1;
  transition: opacity 1s ease-in;
}

.para {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 10rpx;
  margin-bottom: 10rpx;
}

.para .title {
  text-transform: uppercase;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.para text {
  padding: 10rpx;
  text-align: center;
}

.para .map {
  margin-top: 20rpx;
  width: 400rpx;
  height: 400rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.25);
}


